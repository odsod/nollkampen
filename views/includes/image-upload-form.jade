script
  $(document).bind('pageinit', function () {
    var $fileChooser = $('.file-chooser');
    var $enableToggle = $('.enable-toggle');
    var $imagePreview = $('.image-preview');
    // Enhance file chooser
    $fileChooser.textinput({ theme: 'c' });
    // Radio button toggling of file chooser
    $enableToggle.bind('change', function () {
        var disabled = $(this).val() === 'false';
        $fileChooser.attr('disabled', disabled);
        // Toggle visibility of image preview
        $imagePreview.css('opacity', disabled ? 1 : 0.2);
    }).trigger('change');
  });
