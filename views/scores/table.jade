extends ../layout

block title
  h1 Poängställning

block header
  table.results-table.results-table-header.ui-body-a.ui-content
    thead
      th Sektion
      each competition in competitions
        th= competition.name
      th Totalt

block content
  ul(data-role='listview') 
    each section in sections
      li: table.results-table: tr: td 
        span.section-initials(style='background: ' + section.color + '; color: ' + section.textColor)= section.initials
          each competition in competitions
            td= scores[competition.id][section.id] || ' '
          td= scores[section.id] || '0'

block footer
  div(data-role='footer', data-position='fixed')
    div(data-role='navbar'): ul
      each competition in competitions
        li: a(href='/scores/' + competition.name, data-theme='b'): h3
          small Mata in poäng för
          br
          = competition.name
