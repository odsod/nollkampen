gradient-bg(start, end)
    background start
    background-image -webkit-linear-gradient(start, end)
    background-image -moz-linear-gradient(start, end)

$shadow = 1px 2px 3px rgba(51,51,51,0.30)

html
body
#sequence
ul
    width 100%
    height 100%
    margin 0
    padding 0

body
    gradient-bg(#0095d7, #00628c)

.action
    color #eee
    text-align center
    font-size 1em
    word-wrap break-word
    text-shadow $shadow
